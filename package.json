{
  "name": "eclipse-extension",
  "displayName": "eclipse",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "eclipse",
        "aliases": [
          "Eclipse"
        ],
        "extensions": [
          ".ecl"
        ],
        "configuration": "./language-configuration.json",
        "grammars": [
          {
            "language": "eclipse",
            "scopeName": "source.ecl",
            "path": "./syntax/eclipse.tmLanguage.json"
          }
        ],
        "icon": {
          "dark": "./icons/dark.png",
          "light": "./icons/light.png"
        }
      }
    ],
    "commands": [
      {
        "command": "eclipse-extension.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "22.9.1",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
